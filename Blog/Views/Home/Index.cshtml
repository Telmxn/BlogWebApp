    @foreach (var post in Model.Posts)
    {
        var image_path = $"/Image/{post.Image}";
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            <img src="@image_path" alt="Post Image"/>
            <span class="title">@post.Title</span>
        </a>
    }
<div>
    @if (Model.PageNumber > 1)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-pageNumber="@(Model.PageNumber-1)" asp-route-Category="@Model.Category">Previous Page</a>
    }
    @if (Model.NextPage)
    {
        <a asp-action="Index" asp-controller="Home" asp-route-pageNumber="@(Model.PageNumber+1)" asp-route-Category="@Model.Category">Next Page</a>
    }
</div>
</div>