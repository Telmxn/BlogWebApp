<div class="main-img">
    <span class="title">Amazing Blog Site</span>
</div>
<div class="container">
    @*<ul>
            @foreach(var post in Model)
            {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                    @post.Title
